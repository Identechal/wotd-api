{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "function": "getWord"
      },
      {
        "source": "/add",
        "function": "addWord"
      },
      {
        "source": "/delete",
        "function": "deleteWord"
      }
    ]
  }
}